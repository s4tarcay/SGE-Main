@model IEnumerable<SGE.Models.TipoOcorrencia>

@{
    ViewData["Title"] = "Index";
}


<div class="d-flex justify-content-end row-gap-3">
<h4 class="text-light">Add Ocorrencias ➡️ </h4>
    <a class="btn btn-secondary bg-transparent meuBlurLindo border-0 " asp-action="Create">
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
            <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6m2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0m4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4m-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10s-3.516.68-4.168 1.332c-.678.678-.83 1.418-.832 1.664z" />
            <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5" />
        </svg>
    </a>
</div>
<table class=" shadow-lg rounded-3 overflow-hidden table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TipoOcorrenciaNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadAtivo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CadInativo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TipoOcorrenciaNome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CadAtivo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CadInativo)
            </td>
            <td>
                    <div class="botao">
                    <a class="btn" asp-action="Edit" asp-route-id="@item.TipoOcorrenciaId">Edit</a>
                    <a class="btn" asp-action="Details" asp-route-id="@item.TipoOcorrenciaId">Details</a>
                    <a class="btn" asp-action="Delete" asp-route-id="@item.TipoOcorrenciaId">Delete</a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
