@model IEnumerable<SGE.Models.TipoUsuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class=" shadow-lg rounded-3 overflow-hidden table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tipo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tipo)
                </td>
                <td>
                    <div class="botao">

                    <a class="btn" asp-action="Edit" asp-route-id="@item.TipoUsuarioId">Edit</a>
                    <a class="btn" asp-action="Details" asp-route-id="@item.TipoUsuarioId">Details</a>
                    <a class="btn" asp-action="Delete" asp-route-id="@item.TipoUsuarioId">Delete</a>
                    </div>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
